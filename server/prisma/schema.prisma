generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model User {
  index     Int         @id @default(autoincrement())
  uuid      String      @unique
  userName  String
  Email     String
  megaOrder MegaOrder[]
}

model MegaOrder {
  id          String        @id @default(uuid())
  created_at  DateTime      @default(now()) @db.Timestamptz(6)
  userId      String
  DrinksOrder DrinksOrder[]
  FoodOrder   FoodOrder[]
  user        User          @relation(fields: [userId], references: [uuid])
}

model FoodOrder {
  id           String    @id @default(uuid())
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  food         String
  foodQuantity Int
  description  String?
  completed    Boolean
  megaOrderId  String
  megaOrder    MegaOrder @relation(fields: [megaOrderId], references: [id])
}

model DrinksOrder {
  id             String    @id @default(uuid())
  created_at     DateTime  @default(now()) @db.Timestamptz(6)
  drinks         String?
  drinksQuantity Int?
  description    String?
  completed      Boolean
  megaOrderId    String
  megaOrder      MegaOrder @relation(fields: [megaOrderId], references: [id])
}
